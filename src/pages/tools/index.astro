---
import Layout from '../../layouts/Layout.astro';
import { tools } from '../../data/site';

// Filter to only show live tools
const liveTools = tools.filter(t => !t.disabled);
---

<Layout title="Tools | Jacob Drury" description="Collection of useful tools and utilities built to solve real problems.">
  <div class="tools-page">
    <div class="tools-header">
      <a class="tools-home-btn" href="/">‚Üê Home</a>
      <div>
        <h1>Tools</h1>
        <p>Small utilities that are meant to be shared and used.</p>
      </div>
    </div>

    <div class="tools-list">
      {liveTools.map((t) => (
        <a class="tools-item" href={t.href}>
          <div class="tools-item-header">
            <div class="tools-item-name">{t.name}</div>
            <div class="tools-item-badges">
              <span class="tools-item-tag">{t.tag}</span>
              <span class="tools-item-status">{t.status}</span>
            </div>
          </div>
          <p class="tools-item-desc">{t.desc}</p>
        </a>
      ))}
    </div>
  </div>
</Layout>

<style>
  .tools-page {
    max-width: 900px;
    margin: 0 auto;
    padding: 26px 18px;
  }

  .tools-header {
    display: flex;
    flex-direction: column;
    gap: 16px;
    padding-bottom: 16px;
    margin-bottom: 16px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.10);
  }

  .tools-home-btn {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    color: rgba(255, 255, 255, 0.72);
    text-decoration: none;
    transition: color 120ms ease;
    font-weight: 500;
    font-size: 14px;
    width: fit-content;
  }

  .tools-home-btn:hover {
    color: rgba(255, 255, 255, 0.92);
  }

  .tools-header h1 {
    margin: 0;
    font-size: 24px;
  }

  .tools-header p {
    margin: 8px 0 0 0;
    color: rgba(255, 255, 255, 0.7);
  }

  .tools-list {
    margin-top: 16px;
    display: grid;
    gap: 12px;
  }

  .tools-item {
    border: 1px solid rgba(255, 255, 255, 0.12);
    background: rgba(255, 255, 255, 0.05);
    border-radius: 14px;
    padding: 16px;
    color: inherit;
    text-decoration: none;
    transition: all 150ms ease;
  }

  .tools-item:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 255, 255, 0.20);
    transform: translateY(-1px);
  }

  .tools-item-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 10px;
    margin-bottom: 10px;
  }

  .tools-item-name {
    font-weight: 700;
    font-size: 16px;
  }

  .tools-item-badges {
    display: flex;
    gap: 6px;
    align-items: center;
    flex-shrink: 0;
  }

  .tools-item-tag {
    font-size: 11px;
    color: rgba(255, 255, 255, 0.75);
    border: 1px solid rgba(255, 255, 255, 0.12);
    background: rgba(255, 255, 255, 0.05);
    padding: 4px 8px;
    border-radius: 999px;
  }

  .tools-item-status {
    color: #34d399;
    font-size: 12px;
    font-weight: 600;
  }

  .tools-item-desc {
    margin: 0;
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.5;
    font-size: 14px;
  }

</style>
