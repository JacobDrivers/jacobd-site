---
import Layout from '../../layouts/Layout.astro';

const tools = [
  { name: "Coin & Currency Scout", href: "/tools/coin-scout", status: "Live" },
];
---

<Layout>
  <div class="tools-page">
    <div class="tools-header">
      <div>
        <h1>Tools</h1>
        <p>Small utilities that are meant to be shared and used.</p>
      </div>
      <a class="tools-home-btn" href="/">Home</a>
    </div>

    <div class="tools-list">
      {tools.map((t) => (
        <a class="tools-item" href={t.href}>
          <div class="tools-item-header">
            <div class="tools-item-name">{t.name}</div>
            <div class="tools-item-status">{t.status}</div>
          </div>
          <div class="tools-item-path">
            Open: <code>{t.href}</code>
          </div>
        </a>
      ))}
    </div>
  </div>
</Layout>

<style>
  .tools-page {
    max-width: 900px;
    margin: 0 auto;
    padding: 26px 18px;
  }

  .tools-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 12px;
    flex-wrap: wrap;
    margin-bottom: 16px;
  }

  .tools-header h1 {
    margin: 0;
    font-size: 24px;
  }

  .tools-header p {
    margin: 8px 0 0 0;
    color: rgba(255, 255, 255, 0.7);
  }

  .tools-home-btn {
    border: 1px solid rgba(255, 255, 255, 0.14);
    background: rgba(255, 255, 255, 0.06);
    padding: 10px 14px;
    border-radius: 12px;
    font-weight: 600;
    display: inline-block;
  }

  .tools-list {
    margin-top: 16px;
    display: grid;
    gap: 12px;
  }

  .tools-item {
    border: 1px solid rgba(255, 255, 255, 0.12);
    background: rgba(255, 255, 255, 0.05);
    border-radius: 14px;
    padding: 14px;
    color: inherit;
    text-decoration: none;
  }

  .tools-item-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 10px;
  }

  .tools-item-name {
    font-weight: 700;
  }

  .tools-item-status {
    color: rgba(255, 255, 255, 0.7);
    font-size: 13px;
  }

  .tools-item-path {
    color: rgba(255, 255, 255, 0.7);
    margin-top: 6px;
    font-size: 14px;
  }

  .tools-item-path code {
    color: rgba(255, 255, 255, 0.75);
  }
</style>
