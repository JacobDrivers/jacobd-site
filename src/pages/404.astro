---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Page Not Found | Jacob Drury" description="The page you're looking for doesn't exist." noIndex={true}>
  <div class="error-page">
    <div class="error-content">
      <h1 class="error-code">404</h1>
      <h2 class="error-title">Page Not Found</h2>
      <p class="error-message">The page you're looking for doesn't exist or has been moved.</p>
      <div class="error-actions">
        <a href="/" class="error-btn primary">Go Home</a>
        <a href="/tools" class="error-btn">Browse Tools</a>
      </div>
    </div>
  </div>
</Layout>

<style>
  .error-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
  }

  .error-content {
    text-align: center;
    max-width: 600px;
  }

  .error-code {
    font-size: clamp(80px, 15vw, 140px);
    font-weight: 800;
    margin: 0;
    line-height: 1;
    background: linear-gradient(135deg, #f59e0b, #34d399);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .error-title {
    font-size: clamp(24px, 4vw, 32px);
    font-weight: 600;
    margin: 20px 0 16px;
    color: var(--text);
  }

  .error-message {
    font-size: 16px;
    color: var(--muted);
    line-height: 1.6;
    margin: 0 0 32px;
  }

  .error-actions {
    display: flex;
    gap: 12px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .error-btn {
    padding: 12px 24px;
    border-radius: 12px;
    font-weight: 600;
    font-size: 14px;
    transition: all 150ms ease;
    border: 1px solid var(--stroke);
    background: rgba(30, 41, 59, 0.8);
  }

  .error-btn:hover {
    transform: translateY(-1px);
    background: rgba(30, 41, 59, 0.95);
    border-color: rgba(255, 255, 255, 0.18);
  }

  .error-btn.primary {
    background: rgba(245, 158, 11, 0.14);
    border-color: rgba(245, 158, 11, 0.35);
  }

  .error-btn.primary:hover {
    background: rgba(245, 158, 11, 0.20);
    border-color: rgba(245, 158, 11, 0.48);
  }
</style>
