---
const tools = [
  {
    name: "Coin & Currency Scout",
    desc: "Spot prices, melt calculator, key dates, and inventory. Built for quick decisions at home or at auctions.",
    href: "/tools/coin-scout",
    status: "Live",
    tag: "Tools",
  },
  {
    name: "The Devourer",
    desc: "A visceral monster evolution game. Consume, grow, and dominate. Features boss battles, power-ups, and abilities.",
    href: "/tools/monster-game",
    status: "Live",
    tag: "Game",
  },
  {
    name: "Coin Library (coming soon)",
    desc: "Quick reference for types, compositions, key dates, and red flags.",
    href: "/tools",
    status: "Soon",
    tag: "Reference",
    disabled: true,
  },
  {
    name: "Auction Mode (coming soon)",
    desc: "Fast entry, totals, targets, and sanity checks while bidding.",
    href: "/tools",
    status: "Soon",
    tag: "Workflow",
    disabled: true,
  },
];

const links = [
  { name: "GitHub", href: "https://github.com/JacobDrivers" },
  { name: "LinkedIn", href: "https://www.linkedin.com/in/jacobadrury/" },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Jacob Drury | Tools + Projects</title>
    <meta
      name="description"
      content="Personal site for small, useful tools and projects. Fast, shareable, and practical."
    />
    <style>
      :root {
        --bg: #0b1220;
        --panel: rgba(30, 41, 59, 0.8);
        --panel2: rgba(30, 41, 59, 0.9);
        --text: rgba(255, 255, 255, 0.92);
        --muted: rgba(255, 255, 255, 0.72);
        --faint: rgba(255, 255, 255, 0.55);
        --stroke: rgba(255, 255, 255, 0.10);
        --accent: #f59e0b;
        --good: #34d399;
        --shadow: 0 20px 60px rgba(0, 0, 0, 0.45);
        --radius: 16px;
      }

      * { box-sizing: border-box; }
      html, body { height: 100%; }
      body {
        margin: 0;
        min-height: 100vh;
        background: var(--bg);
        color: var(--text);
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Helvetica Neue", sans-serif;
        position: relative;
        overflow-x: hidden;
        font-weight: 400;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }

      body::before {
        content: "";
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        height: 100vh;
        z-index: -1;
        background:
          radial-gradient(1800px 1200px at 12% -10%, rgba(245, 158, 11, 0.12) 0%, transparent 65%),
          radial-gradient(1600px 1200px at 110% 20%, rgba(52, 211, 153, 0.06) 0%, transparent 70%),
          radial-gradient(2200px 1500px at 50% 120%, rgba(59, 130, 246, 0.05) 0%, transparent 85%),
          var(--bg);
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
        pointer-events: none;
      }

      a { color: inherit; text-decoration: none; }
      a:focus-visible { outline: 2px solid rgba(245, 158, 11, 0.7); outline-offset: 3px; border-radius: 10px; }

      .wrap {
        max-width: 1050px;
        margin: 0 auto;
        padding: 20px 20px 40px;
        display: flex;
        flex-direction: column;
      }

      header {
        display: flex;
        align-items: flex-start;
        justify-content: flex-start;
        gap: 18px;
        margin-top: 14px;
        margin-bottom: 28px;
      }

      .brand h1 {
        font-size: clamp(32px, 4vw, 48px);
        letter-spacing: -0.03em;
        margin: 0 0 10px;
        line-height: 1.1;
        font-weight: 700;
      }

      .brand p {
        margin: 0;
        color: var(--muted);
        max-width: 70ch;
        line-height: 1.6;
        font-size: 15px;
        font-weight: 400;
        letter-spacing: -0.01em;
      }

      @media (max-width: 860px) {
        header { flex-direction: column; align-items: flex-start; }
      }

      .hero {
        margin-top: 0;
        border: 1px solid var(--stroke);
        background: linear-gradient(180deg, var(--panel2), rgba(30,41,59,0.7));
        border-radius: var(--radius);
        padding: 24px;
        box-shadow: var(--shadow);
      }

      .cta {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
        margin-top: 12px;
      }

      .btn {
        border: 1px solid var(--stroke);
        background: rgba(30, 41, 59, 0.8);
        padding: 10px 14px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 14px;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        transition: transform 120ms ease, background 120ms ease, border-color 120ms ease;
      }
      .btn:hover { transform: translateY(-1px); background: rgba(30, 41, 59, 0.95); border-color: rgba(255,255,255,0.18); }
      .btnPrimary {
        background: rgba(245, 158, 11, 0.14);
        border-color: rgba(245, 158, 11, 0.35);
      }
      .btnPrimary:hover {
        background: rgba(245, 158, 11, 0.20);
        border-color: rgba(245, 158, 11, 0.48);
      }

      .cards {
        margin-top: 16px;
        display: grid;
        grid-template-columns: 1fr;
        gap: 12px;
      }

      .card {
        border: 1px solid var(--stroke);
        background: rgba(30, 41, 59, 0.7);
        border-radius: var(--radius);
        padding: 14px;
        min-height: 140px;
        transition: transform 120ms ease, background 120ms ease, border-color 120ms ease;
      }
      .card:hover { transform: translateY(-1px); background: rgba(30, 41, 59, 0.85); border-color: rgba(255,255,255,0.18); }
      .card.disabled { opacity: 0.60; }
      .card.disabled:hover { transform: none; }

      .cardTop {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 10px;
      }

      .badge {
        font-size: 12px;
        color: rgba(255,255,255,0.78);
        border: 1px solid var(--stroke);
        background: rgba(30, 41, 59, 0.7);
        padding: 6px 10px;
        border-radius: 999px;
        white-space: nowrap;
      }

      .badgeLive { border-color: rgba(52, 211, 153, 0.30); background: rgba(52, 211, 153, 0.10); }
      .badgeSoon { border-color: rgba(255, 255, 255, 0.16); }

      .card h3 { margin: 10px 0 6px; font-size: 16px; letter-spacing: -0.01em; }
      .card p { margin: 0; color: var(--muted); line-height: 1.45; font-size: 14px; }
    </style>
  </head>

  <body>
    <div class="wrap">
      <header>
        <div class="brand">
          <h1>Jacob Drury</h1>
          <p>
            Tools • Projects • Experiments
          </p>
        </div>
      </header>

      <main class="hero">
        <section>
          <h2 style="margin: 0 0 16px; font-size: 24px; letter-spacing: -0.01em; font-weight: 600;">Available now</h2>

          <div class="cards">
            {tools.slice(0, 2).map((t) => (
              <a
                class={`card ${t.disabled ? "disabled" : ""}`}
                href={t.disabled ? "#" : t.href}
                aria-disabled={t.disabled ? "true" : "false"}
                tabindex={t.disabled ? "-1" : "0"}
                style="grid-column: 1 / -1;"
              >
                <div class="cardTop">
                  <span class="badge">{t.tag}</span>
                  <span class={`badge ${t.status === "Live" ? "badgeLive" : "badgeSoon"}`}>
                    {t.status}
                  </span>
                </div>
                <h3>{t.name}</h3>
                <p>{t.desc}</p>
              </a>
            ))}
          </div>

          <div class="cta" style="margin-top: 14px;">
            <a class="btn btnPrimary" href="/tools">See all tools</a>
          </div>
        </section>

        <section style="margin-top: 36px; padding-top: 24px; border-top: 1px solid var(--stroke);">
          <h2 style="margin: 0 0 16px; font-size: 16px; letter-spacing: -0.01em; color: var(--muted);">About</h2>
          <div style="max-width: 70ch; display: flex; flex-direction: column; gap: 12px;">
            <p style="margin: 0; color: var(--muted); line-height: 1.6; font-size: 14px;">
              I build tools to solve real problems I have.
            </p>
            <p style="margin: 0; color: var(--muted); line-height: 1.6; font-size: 14px;">
              Most started as quick projects for myself, then became more structured as I refined them. If it's here, it works because I use it.
            </p>
            <p style="margin: 0; color: var(--muted); line-height: 1.6; font-size: 14px;">
              I care about clean design, fast results, and logic over guessing.
            </p>
            <p style="margin: 0; color: var(--muted); line-height: 1.6; font-size: 14px;">
              I'm also passionate about mental health and psychology—understanding how people think and work informs how I approach design and problem-solving.
            </p>
          </div>
        </section>

        <footer style="margin-top: 32px; padding-top: 24px; border-top: 1px solid var(--stroke); display: flex; gap: 12px; align-items: center; flex-wrap: wrap;">
          <div style="display: flex; gap: 10px; flex-wrap: wrap;">
            {links.map((l) => {
              const isGitHub = l.name === 'GitHub';
              return (
                <a 
                  href={l.href} 
                  target="_blank" 
                  rel="noreferrer"
                  style="display: inline-flex; align-items: center; gap: 6px; padding: 8px 12px; border: 1px solid var(--stroke); background: rgba(30, 41, 59, 0.6); border-radius: 8px; font-size: 13px; font-weight: 500; color: var(--muted); transition: all 120ms ease; text-decoration: none;"
                  onmouseenter="this.style.background='rgba(30, 41, 59, 0.85)'; this.style.color='var(--text)';"
                  onmouseleave="this.style.background='rgba(30, 41, 59, 0.6)'; this.style.color='var(--muted)';" 
                >
                  {isGitHub ? (
                    <svg style="width: 14px; height: 14px;" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                      <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57 4.77-1.59 8.205-6.075 8.205-11.385 0-6.63-5.37-12-12-12z"/>
                    </svg>
                  ) : (
                    <svg style="width: 14px; height: 14px;" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.475-2.236-1.986-2.236-1.081 0-1.722.722-2.006 1.422-.103.25-.129.598-.129.946v5.437h-3.554s.05-8.814 0-9.737h3.554v1.375c.427-.659 1.191-1.599 2.897-1.599 2.117 0 3.704 1.384 3.704 4.361v5.6zM5.337 9.341c-1.144 0-1.891-.761-1.891-1.712 0-.956.747-1.71 1.934-1.71 1.187 0 1.89.754 1.916 1.71 0 .951-.729 1.712-1.959 1.712zm1.959 11.111H3.349V9.715h3.947v10.737zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                    </svg>
                  )}
                  {l.name}
                </a>
              );
            })}
          </div>
        </footer>
      </main>
    </div>
  </body>
</html>
