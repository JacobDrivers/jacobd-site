---
import Layout from '../layouts/Layout.astro';
import { tools, links } from '../data/site';
---

<Layout>
  <div class="wrap">
    <header>
      <div class="brand">
        <h1>Jacob Drury</h1>
        <p>Tools • Projects • Experiments</p>
      </div>
    </header>

    <main class="hero">
      <section>
        <h2 class="section-title">Available now</h2>

        <div class="cards">
          {tools.slice(0, 2).map((t) => (
            <a
              class={`card ${t.disabled ? "disabled" : ""}`}
              href={t.disabled ? "#" : t.href}
              aria-disabled={t.disabled ? "true" : "false"}
              tabindex={t.disabled ? -1 : 0}
            >
              <div class="cardTop">
                <span class="badge">{t.tag}</span>
                <span class={`badge ${t.status === "Live" ? "badgeLive" : "badgeSoon"}`}>
                  {t.status}
                </span>
              </div>
              <h3>{t.name}</h3>
              <p>{t.desc}</p>
            </a>
          ))}
        </div>

        <div class="cta">
          <a class="btn btnPrimary" href="/tools">See all tools</a>
        </div>
      </section>

      <section class="about-section">
        <h2 class="about-title">About</h2>
        <div class="about-content">
          <p>I build tools to solve real problems I have.</p>
          <p>Most started as quick projects for myself, then became more structured as I refined them. If it's here, it works because I use it.</p>
          <p>I care about clean design, fast results, and logic over guessing.</p>
          <p>I'm also passionate about mental health and psychology—understanding how people think and work informs how I approach design and problem-solving.</p>
        </div>
      </section>

      <footer class="site-footer">
        <div class="footer-links">
          {links.map((l) => {
            const isGitHub = l.name === 'GitHub';
            return (
              <a 
                href={l.href} 
                target="_blank" 
                rel="noreferrer"
                class="footer-link"
                aria-label={`Visit my ${l.name} profile`}
              >
                {isGitHub ? (
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                    <title>GitHub icon</title>
                    <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57 4.77-1.59 8.205-6.075 8.205-11.385 0-6.63-5.37-12-12-12z"/>
                  </svg>
                ) : (
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                    <title>LinkedIn icon</title>
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.475-2.236-1.986-2.236-1.081 0-1.722.722-2.006 1.422-.103.25-.129.598-.129.946v5.437h-3.554s.05-8.814 0-9.737h3.554v1.375c.427-.659 1.191-1.599 2.897-1.599 2.117 0 3.704 1.384 3.704 4.361v5.6zM5.337 9.341c-1.144 0-1.891-.761-1.891-1.712 0-.956.747-1.71 1.934-1.71 1.187 0 1.89.754 1.916 1.71 0 .951-.729 1.712-1.959 1.712zm1.959 11.111H3.349V9.715h3.947v10.737zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                )}
                {l.name}
              </a>
            );
          })}
        </div>
      </footer>
    </main>
  </div>
</Layout>

<style>
  .wrap {
    max-width: 1050px;
    margin: 0 auto;
    padding: 20px 20px 40px;
    display: flex;
    flex-direction: column;
  }

  header {
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
    gap: 18px;
    margin-top: 14px;
    margin-bottom: 28px;
  }

  .brand h1 {
    font-size: clamp(32px, 4vw, 48px);
    letter-spacing: -0.03em;
    margin: 0 0 10px;
    line-height: 1.1;
    font-weight: 700;
  }

  .brand p {
    margin: 0;
    color: var(--muted);
    max-width: 70ch;
    line-height: 1.6;
    font-size: 15px;
    font-weight: 400;
    letter-spacing: -0.01em;
  }

  @media (max-width: 860px) {
    header {
      flex-direction: column;
      align-items: flex-start;
    }
  }

  .hero {
    margin-top: 0;
    border: 1px solid var(--stroke);
    background: linear-gradient(180deg, var(--panel2), rgba(30, 41, 59, 0.7));
    border-radius: var(--radius);
    padding: 24px;
    box-shadow: var(--shadow);
  }

  .section-title {
    margin: 0 0 16px;
    font-size: 24px;
    letter-spacing: -0.01em;
    font-weight: 600;
  }

  .cta {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
    margin-top: 14px;
  }

  .btn {
    border: 1px solid var(--stroke);
    background: rgba(30, 41, 59, 0.8);
    padding: 10px 14px;
    border-radius: 12px;
    font-weight: 600;
    font-size: 14px;
    display: inline-flex;
    align-items: center;
    gap: 10px;
    transition: transform 120ms ease, background 120ms ease, border-color 120ms ease;
  }

  .btn:hover {
    transform: translateY(-1px);
    background: rgba(30, 41, 59, 0.95);
    border-color: rgba(255, 255, 255, 0.18);
  }

  .btnPrimary {
    background: rgba(245, 158, 11, 0.14);
    border-color: rgba(245, 158, 11, 0.35);
  }

  .btnPrimary:hover {
    background: rgba(245, 158, 11, 0.20);
    border-color: rgba(245, 158, 11, 0.48);
  }

  .cards {
    margin-top: 16px;
    display: grid;
    grid-template-columns: 1fr;
    gap: 12px;
  }

  .card {
    border: 1px solid var(--stroke);
    background: rgba(30, 41, 59, 0.7);
    border-radius: var(--radius);
    padding: 14px;
    min-height: 140px;
    transition: transform 120ms ease, background 120ms ease, border-color 120ms ease;
    grid-column: 1 / -1;
  }

  .card:hover {
    transform: translateY(-1px);
    background: rgba(30, 41, 59, 0.85);
    border-color: rgba(255, 255, 255, 0.18);
  }

  .card.disabled {
    opacity: 0.60;
  }

  .card.disabled:hover {
    transform: none;
  }

  .cardTop {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 10px;
  }

  .badge {
    font-size: 12px;
    color: rgba(255, 255, 255, 0.78);
    border: 1px solid var(--stroke);
    background: rgba(30, 41, 59, 0.7);
    padding: 6px 10px;
    border-radius: 999px;
    white-space: nowrap;
  }

  .badgeLive {
    border-color: rgba(52, 211, 153, 0.30);
    background: rgba(52, 211, 153, 0.10);
  }

  .badgeSoon {
    border-color: rgba(255, 255, 255, 0.16);
  }

  .card h3 {
    margin: 10px 0 6px;
    font-size: 16px;
    letter-spacing: -0.01em;
  }

  .card p {
    margin: 0;
    color: var(--muted);
    line-height: 1.45;
    font-size: 14px;
  }

  .about-section {
    margin-top: 36px;
    padding-top: 24px;
    border-top: 1px solid var(--stroke);
  }

  .about-title {
    margin: 0 0 16px;
    font-size: 16px;
    letter-spacing: -0.01em;
    color: var(--muted);
  }

  .about-content {
    max-width: 70ch;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .about-content p {
    margin: 0;
    color: var(--muted);
    line-height: 1.6;
    font-size: 14px;
  }

  .site-footer {
    margin-top: 32px;
    padding-top: 24px;
    border-top: 1px solid var(--stroke);
    display: flex;
    gap: 12px;
    align-items: center;
    flex-wrap: wrap;
  }

  .footer-links {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
  }

  .footer-link {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 8px 12px;
    border: 1px solid var(--stroke);
    background: rgba(30, 41, 59, 0.6);
    border-radius: 8px;
    font-size: 13px;
    font-weight: 500;
    color: var(--muted);
    transition: all 120ms ease;
    text-decoration: none;
  }

  .footer-link:hover {
    background: rgba(30, 41, 59, 0.85);
    color: var(--text);
  }

  .footer-link svg {
    width: 14px;
    height: 14px;
  }
</style>
